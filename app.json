{
  "expo": {
    "name": "ResellHub",
    "slug": "resell-hub",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#FF6B35"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.yourcompany.resellhub"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#FF6B35"
      },
      "package": "com.yourcompany.resellhub",
      "permissions": [
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE",
        "CAMERA",
        "NOTIFICATIONS"
      ],
      "versionCode": 1
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      [
        "expo-notifications",
        {
          "icon": "./assets/notification-icon.png",
          "color": "#FF6B35"
        }        
        
      ],
      [
    "expo-image-picker",
    {
      "photosPermission": "Permite que ResellHub acceda a tus fotos para subir productos.",
      "cameraPermission": "Permite que ResellHub use la c√°mara para fotografiar tus productos."
    }
  ]
    ],
    "extra": {
      "eas": {
        "projectId": "7885857d-7423-415c-8683-cac090ec5f79"
      }
    },
    "owner": "perdigon85"
  }
}
